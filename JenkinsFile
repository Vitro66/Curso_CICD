def birth_date = '14/07/1982'
def cal = new Calendar()
def currentDate = new Date()
def current_year = cal.setTime(currentDate).get(Calendar.YEAR);

pipeline{
    agent any
    stages{
        stage("Calcular Edad")
        {
            steps{
		script{
			birth_year = birth_date.substring(6,10)
			echo "${birth_year}"
			echo "${current_year}"
                	age = birth_year.toInteger() - current_year
			echo "${age}"
		}
            }
        }
        stage("Generar TXT")
        {
            steps{
                script{
                    echo "stage Generar TXT"
                    writeFile(file:"D:\\Borrar\\FichEdad.txt", text: "La edad es ${age}")
			echo "Se genero el fichero"
                }
            }
        }
       
    }
}
