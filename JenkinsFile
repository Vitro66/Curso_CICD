def birth_date = '14/07/1982'
def current_year = new Date().getYear()

pipeline{
    agent any
    stages{
        stage("Calcular Edad")
        {
            steps{
		script{
			birth_year = birth_date.substring(6,10)
			echo "${birth_year}"
                	age = birth_year.toInteger() - current_year
			echo "${age}"
		}
            }
        }
        stage("Generar TXT")
        {
            steps{
                script{
                    echo "stage Generar TXT"
                    
                }
            }
        }
       
    }
}
